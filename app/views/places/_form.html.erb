<%= form_with(model: place, class: "contents") do |form| %>
  <% if place.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(place.errors.count, "error") %> prohibited this place from being saved:</h2>

      <ul class="list-disc ml-6">
        <% place.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :category %>
    <%= form.text_field :category, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": place.errors[:category].none?, "border-red-400 focus:outline-red-600": place.errors[:category].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :placename %>
    <%= form.text_field :placename, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": place.errors[:placename].none?, "border-red-400 focus:outline-red-600": place.errors[:placename].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :location %>
    <%= form.text_field :location, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": place.errors[:location].none?, "border-red-400 focus:outline-red-600": place.errors[:location].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :timing %>
    <%= form.text_field :timing, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": place.errors[:timing].none?, "border-red-400 focus:outline-red-600": place.errors[:timing].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :booking %>
    <%= form.text_field :booking, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": place.errors[:booking].none?, "border-red-400 focus:outline-red-600": place.errors[:booking].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
