    <strong class="block font-medium mb-1">Username:</strong>
    <%= user.username %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Age:</strong>
    <%= user.age %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Gender:</strong>
    <%= user.gender %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Address:</strong>
    <%= user.address %>
  </div>
</div>
